<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/nikerunning"
    tools:context="smv.lovearthstudio.com.svmproj.activity.MainActivity">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_collection_data"
            style="@style/SvmBtnStyle"
            android:background="@mipmap/landixiezi"
            android:textSize="@dimen/design_bottom_sheet_modal_elevation"
            android:textStyle="bold"
            android:text="COLLECT" />

        <Button
            android:id="@+id/btn_test"
            style="@style/SvmBtnStyle"
            android:background="@mipmap/landixiezi"
            android:textStyle="bold"
            android:textSize="@dimen/design_bottom_sheet_modal_elevation"
            android:text="TEST" />

        <Button
            android:id="@+id/btn_real"
            style="@style/SvmBtnStyle"
            android:background="@mipmap/landixiezi"
            android:textStyle="bold"
            android:textSize="@dimen/design_bottom_sheet_modal_elevation"
            android:text="REAL" />
    </LinearLayout>
</LinearLayout>
